@model AfriclaimMVC.Models.ClaimViewModel

@{
    ViewData["Title"] = "Submit Claim"; 
}

<h1 class="form-title">Submit Claim</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-container">  <!-- Input field for the user's Name -->
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="Name" required />
        </div>
        <!-- Input field for the user's Surname -->
        <div class="form-group">
            <label for="surname">Surname:</label>
            <input type="text" class="form-control" id="surname" name="Surname" required />
        </div>
        <!-- Input field for Amount or Hours worked -->
        <div class="form-group">
            <label for="amount">Amount/Hours:</label>
            <input type="number" class="form-control" id="amount" name="Amount" required />
        </div>
        <!-- Input field for the Module of the claim -->
        <div class="form-group">
            <label for="module">Module:</label>
            <input type="text" class="form-control" id="module" name="Module" required />
        </div>
        <!-- Input field for the supporting document for the claim-->
        <div class="form-group">
            <label for="document">Supporting Document (Optional):</label>
            <input type="file" class="form-control-file" id="document" name="Document" /> 
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">Submit Claim</button> <!-- Submit button when users are ready to submit their claim-->
        </div>
    </div>
</form>

<!-- Styles for the form -->
<style>
    .form-title {
        font-size: 36px;
        font-weight: bold;
        color: #000000;
        margin-bottom: 20px;
    }

    .form-container {
        background-color: #e0f7f4;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .btn-submit {
        background-color: #ff9933;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 20px;
        font-size: 18px;
        cursor: pointer;
        display: block;
        margin-top: 20px;
    }

    .btn-submit:hover {
        background-color: #e68a00;
    }
</style>
