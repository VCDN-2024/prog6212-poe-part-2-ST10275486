@model List<AfriclaimMVC.Models.ClaimViewModel>

@{
    ViewData["Title"] = "Claim"; 
}

<h1 class="page-title">Index</h1>

<!-- Creates "Create new" button -->
<a href="/Claim/Create" class="btn btn-create">Create new</a>

<!-- Table structure with headings -->
<table class="claim-table">
    <thead>
        <tr>
            <th>Submission Date</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Hours</th>
            <th>Hourly Rate</th> 
            <th>Module</th>
            <th>Total Salary</th>
            <th>Document</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="9" style="text-align: center;">No claims available.</td>
            </tr>
        }
        else
        {
            foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.SubmissionDate.ToString("d")</td>
                    <td>@claim.Name</td>
                    <td>@claim.Surname</td>
                    <td>@claim.Amount</td>
                    <td>R130.00</td> 
                    <td>@claim.Module</td>
                    <td>@claim.TotalSalary.ToString("C")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentName))
                        {
                            <!--***************************************************************************************
                            *   Title: Path.GetFileName Method (System.IO)
                            *    Author: Microsoft
                            *    Date: 2024
                            *    Code version: Version 1
                            *    Availability: https://learn.microsoft.com/en-us/dotnet/api/system.io.path.getfilename?view=net-8.0
                            *
                                ***************************************************************************************/ -->
                            <a href="@claim.DocumentName" target="_blank">@System.IO.Path.GetFileName(claim.DocumentName)</a> <!-- Display document name -->
                        }
                        else
                        {
                            <span>No document uploaded</span>
                        }
                    </td>
                    <td>
                        <span>@claim.Status</span> <!-- Display the current status -->
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

