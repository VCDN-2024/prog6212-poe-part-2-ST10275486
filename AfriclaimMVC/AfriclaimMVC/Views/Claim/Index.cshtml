@model List<AfriclaimMVC.Models.ClaimViewModel>

@{
    ViewData["Title"] = "Claim"; // Sets the title for the page
}

<h1 class="page-title">Index</h1>

<!-- Creates "Create new" button -->
<a href="/Claim/Create" class="btn btn-create">Create new</a>

<!-- Table structure with headings -->
<table class="claim-table">
    <thead>
        <tr>
            <th>Submission Date</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Amount/Hours</th>
            <th>Module</th>
            <th>Total Salary</th>
            <th>Document</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="8" style="text-align: center;">No claims available.</td>
            </tr>
        }
        else
        {
            foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.SubmissionDate.ToString("d")</td>
                    <td>@claim.Name</td>
                    <td>@claim.Surname</td>
                    <td>@claim.Amount</td>
                    <td>@claim.Module</td>
                    <td>@claim.TotalSalary.ToString("C")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentName))
                        {
                            <span>@claim.DocumentName</span>
                        }
                        else
                        {
                            <span>No document uploaded</span>
                        }
                    </td>
                    <td>
                        <span>@claim.Status</span> <!-- Display the current status -->
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Styles used for Claim page -->
<style>
    .page-title {
        font-size: 36px;
        font-weight: bold;
        color: #000000;
        margin-bottom: 20px;
    }

    .btn-create {
        display: inline-block;
        margin-bottom: 20px;
        padding: 10px 20px;
        background-color: #ff9933; /* Orange color */
        color: white;
        border-radius: 20px;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
    }

    .claim-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 40px;
    }

        .claim-table th {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid #e0e0e0;
            background-color: #e0f7f4; /* Light teal color */
            font-size: 14px;
            font-weight: bold;
            color: #000000;
        }

        .claim-table td {
            padding: 10px;
            border: 1px solid #e0e0e0;
        }
</style>
