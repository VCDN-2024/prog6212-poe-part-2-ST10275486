@model AfriclaimMVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- Style for the Login page -->
<!--***************************************************************************************
 *   Title: font-weight - CSS: Cascading Style Sheets | MDN
 *    Author: MDN Web Docs
 *    Date: [N/B]
 *    Code version: Version 1
 *    Availability: https://developer.mozilla.org/en-US/docs/Web/CSS/font-weight
 *
     ***************************************************************************************/ -->
<style>
    .center-content {
        text-align: center;
        margin-top: 100px;
    }

    .login-title {
        font-size: 50px;
        font-weight: bold;
        color: #006838;
        margin-bottom: 30px;
    }

    .login-form {
        max-width: 400px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 20px;
        border: 2px solid #dcdcdc;
        text-align: center;
        font-size: 16px;
        outline: none;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #00a386;
        }

    .password-container {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }

    .btn-login {
        background-color: #ff9933;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 20px;
        font-size: 18px;
        cursor: pointer;
        width: 100%;
    }

        .btn-login:hover {
            background-color: #e68a00;
        }

    .text-danger {
        color: red;
    }
</style>

<div class="center-content">
    <h1 class="login-title">LOGIN</h1>

    <!-- Display error messages (Validation Summary) -->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form method="post" asp-action="Login" class="login-form">
        <!--***************************************************************************************
        *   Title: HtmlHelper.AntiForgeryToken Method (System.Web.Mvc)
        *    Author: Microsoft
        *    Date: 2024
        *    Code version: Version 1
        *    Availability: https://learn.microsoft.com/en-us/dotnet/api/system.web.mvc.htmlhelper.antiforgerytoken?view=aspnet-mvc-5.2
        *
        ***************************************************************************************/ -->
        @Html.AntiForgeryToken() <!-- Anti-forgery token for security -->
        <!-- Login form -->
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="Email" asp-for="Email" placeholder="Enter your email" required />
        </div>

        <!-- Password input field with toggle visibility icon -->
        <div class="form-group">
            <label for="password">Password</label>
            <div class="password-container">
                <input type="password" class="form-control" id="password" name="Password" asp-for="Password" placeholder="Password" required />
                <i class="fa fa-eye-slash toggle-password" onclick="togglePasswordVisibility()"></i>
            </div>
        </div>

        <!-- Submit button for login -->
        <!--***************************************************************************************
                           *   Title: asp.net core Button -Post method in Controller - Microsoft Q&A
                           *    Author: Santhi Dhanuskodi
                           *    Date: 11 April 2024
                           *    Code version: Version 1
                           *    Availability: https://learn.microsoft.com/en-au/answers/questions/1654918/asp-net-core-button-post-method-in-controller
                           *
        ***************************************************************************************/ -->
        <button type="submit" class="btn btn-login">Login</button>
    </form>
</div>

<!-- Toggle password visibility -->
<!--***************************************************************************************
    *   Title: How to show and hide password when click on eye icon using jquery
    *    Author: Stackoverflow
    *    Date: 27 July 2018
    *    Code version: Version 1
    *    Availability: https://stackoverflow.com/questions/51552661/how-to-show-and-hide-password-when-click-on-eye-icon-using-jquery
    *
***************************************************************************************/ -->
<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById("password");
        var icon = document.querySelector(".toggle-password");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        } else {
            passwordInput.type = "password";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        }
    }
</script>
