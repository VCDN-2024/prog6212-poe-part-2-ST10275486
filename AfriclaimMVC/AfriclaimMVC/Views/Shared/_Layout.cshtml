@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Africlaim</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Font Awesome for the profile icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <style>
        .navbar-custom {
            background-color: #00a386;
            color: white;
        }

            .navbar-custom a {
                color: white;
                font-weight: bold;
            }

            .navbar-custom .navbar-brand img {
                height: 40px;
            }

        .profile-icon {
            font-size: 24px;
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand" href="/">
			<img src="~/images/africlaim (1).png" />
        </a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link @((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "active" : "")" href="/">Home</a>
            </li>

            @* Show Claim and Invoice links for Lecturer *@
            @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Lecturer")
            {
                <li class="nav-item">
                    <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Claim") ? "active" : "")" href="/Claim">Claim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Invoice") ? "active" : "")" href="/Invoice">Invoice</a>
                </li>
            }

            @* Show Submissions link for Admin *@
            @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Admin")
            {
                <li class="nav-item">
                    <a class="nav-link @((ViewContext.RouteData.Values["controller"].ToString() == "Submission") ? "active" : "")" href="/Submission">Submissions</a>
                </li>
            }
        </ul>
        <ul class="navbar-nav ml-auto">
            @* Show Login/Logout based on the user's login state *@
            @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == null)
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Login">
                        <i class="fa fa-user-circle profile-icon"></i> Login
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Logout">
                        <i class="fa fa-sign-out-alt profile-icon"></i> Logout
                    </a>
                </li>
            }
        </ul>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
