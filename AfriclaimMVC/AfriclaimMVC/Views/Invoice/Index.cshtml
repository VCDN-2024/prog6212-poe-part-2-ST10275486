@{
    ViewData["Title"] = "Invoice";
}

<div class="invoice-container">
    <h1 class="invoice-title">Invoice</h1>
    <!-- Table to display invoice details (Description, Hours, Amount per Hour, Total Salary) -->
    <table class="invoice-table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Hours</th>
                <th>Amt. Per Hour</th>
                <th>Total Sal.</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="4" style="text-align: center; color: #999;">No data available</td> <!-- Default message when no data is available -->
            </tr>
        </tbody>
    </table>

    <div class="invoice-footer">
        <!-- Footer showing the total amount of the invoice -->
        <p>Total Amt: <span class="total-amount">R0.00</span></p>
    </div>
</div>

<!-- Styles for the Invoice page -->
<style>
    .invoice-container {
        background-color: #e0f7f4; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        max-width: 800px; 
        margin: auto; 
    }

    .invoice-title {
        font-size: 36px;
        font-weight: bold;
        color: #000000;
        text-align: center;
        margin-bottom: 20px;
    }

    .invoice-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .invoice-table th, .invoice-table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #e0e0e0;
        }

        .invoice-table th {
            background-color: #d5f5e3; 
            font-weight: bold;
            color: #000000;
        }

    .invoice-footer {
        text-align: right; 
        font-size: 16px;
        font-weight: bold;
        margin-top: 20px;
    }

    .total-amount {
        color: #ff9933; 
    }
</style>
